<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CitizenV</title>

    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="../ASSETS/fontawesome-free-5.15.4-web/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="../ASSETS/CSS/base_CV.css">
    <link rel="stylesheet" href="../ASSETS/CSS/main_CV.css">
    <link rel="stylesheet" href="../ASSETS/CSS/Responsive.css">
</head>
<body>
    <!-- header trang nhập liệu -->
    <header class="header">
        <div class="header__body">
            <div id="CitizenV">CitizenV</div>

            <a {{hidden}} href="/input" class="back">
                <i class="back__icon fas fa-arrow-left"></i>
            </a>
    
            <div class="header__navbar-item header__navbar-login">
                <span class="header__navbar-login-name">
                    <span id="name-user" style="text-decoration: none; color: black">{{username}}</span>
                    <div class="user-avatar">
                        <i class="fas fa-user-circle"></i>
                    </div>
                </span>
                
                <ul class="header__navbar-showdetails Phan_dem_Show">
                    <li class="header__navbar-show-item">
                        <a href="/home" class="header__navbar-show-link">Tài khoản của tôi</a>
                    </li>
                    <li class="header__navbar-show-item header__navbar-show-item--separate">
                        <a href="/logout" class="header__navbar-show-link">Đăng xuất</a>
                    </li>
                </ul>
            </div>
        </div>
    </header>

    <form action="/edit/post" method="POST" id="form-1">
        <!-- Liên quan đến cá nhân -->
        <div class="main main-input">
            <h1 class="title-input">
                Chỉnh Sửa Thông Tin
            </h1>

            <div class="row row-input">
                <label class="col-24">1. Họ và Tên </label>
                <div class="form-group js-form-group">
                    <div class="form-input">
                        <input type="text" class="input-name" id="fullname" name="fullname">
                    </div>
                    <span class="form-message"></span>
                </div>
            </div>

            <div class="row row-input">
                <label class="col-24">2. Số CCCD/CMND </label>
                <div class="form-group js-form-group">
                    <div class="form-input name-input">
                        <input type="text" class="input-name" id="cccd" name="cccd">
                    </div>
                    <span class="form-message"></span>
                </div>
            </div>
            
            <div class="row row-input align-items-center">
                <label class="col-24">3. Ngày sinh</label>
                <div class="form-group js-form-group">
                    <div class="form-date">
                        <div class="form-date__item">
                            <select name="year" id="year" size="1" class="input__item input__item-date" required>
                                <option value=" " disabled selected >Chọn Năm</option>
                            </select>
                        </div>
                        
                        <div class="form-date__item">
                            <select name="month" id="month" size="1" class="input__item input__item-date" required>
                                <option value=" " disabled selected >Chọn Tháng</option>
                            </select>
                        </div>
                        
                        <div class="form-date__item">
                            <select name="day" id="day" size="1" class="input__item input__item-date" required>
                                <option value=" " disabled selected >Chọn Ngày</option>
                            </select>
                        </div>
                        
                    </div>
                    <!-- <span class="form-message error"></span> -->
                </div>
            </div>

            <div class="row row-input align-items-center">
                <label class="col-24" >4. Giới Tính </label>
                <div class="form-group js-form-group">
                    <div class="row input-radio choose-input">
                        <label class="col container-radio">
                            <input type="radio" id="male" name="sex" value="Nam">
                            <span class="container__checkmark"></span>
                            <span class="check-name">Nam</span>
                        </label>
                        <label class="col container-radio">
                            <input type="radio" id="female" name="sex" value="Nữ">
                            <span class="container__checkmark"></span>
                            <span class="check-name">Nữ</span>
                        </label>
                    </div>
                    <span class="form-message"></span>
                </div>
            </div>

            <div class="row align-items-center row-input">
                <label class="col-24">5. Quê quán </label>
                <div class="form-group">
                    <div class="input-address">
                        <div class="row margin-bt-12 input-address-1 js-form-group">
                            <div {{hidden_thon}} class="js-form-group form-group-fixed">
                                <div class="form-input">
                                    <select name="thon" id="thon" class=" input__item" {{required}}>
                                        <option value="" disabled selected class="option">Thôn/Bản/Tổ dân phố</option>
                                    </select>
                                    <input class="billing_address_2" type="hidden" value="">
                                </div>
                                <span class="form-message error"></span>
                            </div>
                            <div class="js-form-group form-group-fixed">
                                <div class="form-input input-address-2">
                                    <input type="text" class="input__item"  placeholder="Địa chỉ chi tiết">
                                </div>
                                <span class="form-message error"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row row-input">
                <label class="col-24">6. Tôn Giáo </label>
                <div class="form-group js-form-group">
                    <div class="form-input name-input">
                        <input type="text" id="religion" name="religion">
                    </div>
                    <span class="form-message"></span>
                </div>
            </div>

            <div class="row row-input">
                <label class="col-24">7. Địa chỉ thường trú </label>
                <div class="form-group js-form-group">
                    <div class="form-input name-input">
                        <input type="text" id="address-1" name="address-1">
                    </div>
                    <span class="form-message"></span>
                </div>
            </div>

            <div class="row row-input">
                <label class="col-24">8. Địa chỉ tạm trú </label>
                <div class="form-group js-form-group">
                    <div class="form-input name-input">
                        <input type="text" id="address-2" name="address-2" placeholder="Nếu giống mục 7 thì không cần nhập lại ở đây">
                    </div>
                    <span class="form-message"></span>
                </div>
            </div>

            <div class="row row-input">
                <label class="col-24">9. Nghề nghiệp </label>
                <div class="form-group js-form-group">
                    <div class="form-input name-input">
                        <input type="text" id="job" name="job">
                    </div>
                    <span class="form-message"></span>
                </div>
            </div>

            <button class="btn confirm-btn">
                Xác Nhận Chỉnh Sửa
            </button>
        </div>
    </form>
    <!-- Footer trang nhập liệu -->
    <div id="footer">
        <div class="footer__list">
            <h3>Sản Phẩm Được Xây Dựng Bởi</h3>
            <ul>
                <li>
                    <span class="footer__list--text">Nguyễn Thế Khải (nhóm trưởng) </span>
                    <span class="footer__list--text"> MSSV: 19020331</span>
                </li>
                <li>
                    <span class="footer__list--text">Nguyễn Ngọc Khánh </span>
                    <span class="footer__list--text"> MSSV: 18020688</span>
                </li>
                <li>
                    <span class="footer__list--text">Nguyễn Đình Tuấn Anh </span>
                    <span class="footer__list--text"> MSSV: 19020075</span>
                </li>
            </ul>

            <a href="https://www.facebook.com/Kiahtt" target="_blank">
                <i class="footer__list-icon fab fa-facebook-square"></i>
            </a>
            <a href="">
                <i class="footer__list-icon fab fa-instagram"></i>
            </a>
            <a href="">
                <i class="footer__list-icon fab fa-youtube"></i>
            </a>
        </div>
    </div>

    <!-- Xác Nhận -->
    <div class="modal-confirm js-modal-confirm">
        <div class="confirm-container">
            <span>Bạn chấp nhận xoá tất cả các thông tin đã nhập chứ ???</span>
            <div class="confirm-container__btn">
                <button class="btn btn-cancel js-close">Huỷ Bỏ</button>
                <button class="btn btn-confirm js-btn-confirm">Xoá</button>
            </div>

            <i class="modal__close-icon js-close fas fa-times"></i>
        </div>
    </div>

    <!--============= Script ============= -->
    <!-- Chức năng xoá các thông tin đã nhập -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/gh/vietblogdao/js/districts.min.js"></script>
    <script src="https://code.jquery.com/jquery-latest.js"></script>
    <script src="../ASSETS/JS/address_date.js"></script>
    <script src="../ASSETS/JS/js_Validation.js"></script>
    <script src="../ASSETS/JS/other.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>
    <script>
        fetch('../ASSETS/data_vietnam_province/thon.json').then(response => {
            return response.json();
        }).then(data => {
            $(data).each(function (index, value) {
                if (value.id_xa === "{{code}}") {
                    $('#thon').append('<option>' + value.thon + '</option>');
                }
            })
        }).catch(err => {
            console.log(err);
        });
    </script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function () {
        // Gọi đến file js_validation để check các lỗi cơ bản, và lấy ra dữ liệu
          Validator({
            form: '#form-1',
            formGroupSelector: '.js-form-group',
            errorSelector: '.form-message',
            rules: [
              Validator.isRequired('#fullname', 'Vui lòng nhập tên'),
              Validator.isRequired('#cccd', 'Vui lòng nhập số CCCD/CMND'),
              Validator.minLength('#cccd', 12, 'CCCD/CMND cấn có 12 chữ số'),
              Validator.isRequired('input[name="sex"]', 'Vui lòng chọn giới tính của bạn'),
            ]
          });
        });
  
    </script>


    <script>
        const refresh = document.querySelector('.js-refresh__btn');
        const modalConfirm = document.querySelector('.js-modal-confirm');
        const closes = document.querySelectorAll('.js-close');
