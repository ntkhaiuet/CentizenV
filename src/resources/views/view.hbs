<body>
    <!-- header trang nhập liệu -->
    <header class="header">
        <div class="header__body">

            <div id="CitizenV">CitizenV</div>

            <a href="/home" class="back">
                <i class="back__icon fas fa-arrow-left"></i>
            </a>
    
            <div class="header__navbar-item header__navbar-login">
                <span class="header__navbar-login-name">
                    <span id="name-user">{{username}}</span>
                    <div class="user-avatar">
                        <i class="fas fa-user-circle"></i>
                    </div>
                </span>
               
                <ul class="header__navbar-showdetails Phan_dem_Show">
                    <li class="header__navbar-show-item">
                        <a href="" class="header__navbar-show-link">Tài khoản của tôi</a>
                    </li>
                    <li class="header__navbar-show-item header__navbar-show-item--separate">
                        <a href="/logout" class="header__navbar-show-link">Đăng xuất</a>
                    </li>
                </ul>
            </div>
        </div>
    </header>

    <form class="main">
        <div class="row search">
            <h3>Tìm Kiếm Dân Cư</h3>

            <div class="col search__other">
                <div class="search__other-item">
                    <input type="text" name="view_search" id="view_search" class="search__other-input" placeholder="Nhập Họ và tên/CCCD">
                    <i class="search__other-icon fas fa-search"></i>
                </div>
            </div>

            <div class="col row search__address align-items-center statistics__data-select">
                <div class="statistics__data-input">
                    <div class="row margin-bt-12 input-address-1 input-address-statistics">
                        <div {{hidden_province}} class="col form-input">
                            <select name="province"  id="id_province" class="input__item">
                                <option value="" disabled selected >-- Tỉnh/Thành phố --</option>
                            </select>
                            <input class="billing_address_1" type="hidden" value="">
                        </div>
                        <div {{hidden_district}} class="col form-input">
                            <select name="district" id="id_district" class=" input__item">
                                <option value="" disabled selected class="option">-- Quận/Huyện --</option>
                            </select>
                            <input class="billing_address_2" type="hidden" value="">
                        </div>
                    </div>

                    <div class="row margin-bt-12 input-address-1 input-address-statistics">
                        <div {{hidden_subdistrict}} class="col form-input">
                            <select name="subdistrict"  id="id_subdistrict" class="input__item">
                                <option value="" disabled selected >-- Xã/Phường --</option>
                            </select>
                            <input class="billing_address_1" type="hidden" value="">
                        </div>
                        <div class="col form-input">
                            <select name="thon" id="id_thon"class=" input__item">
                                <option value="" disabled selected class="option">-- Thôn/Bản/Tổ dân phố --</option>
                            </select>
                            <input class="billing_address_2" type="hidden" value="">
                        </div>
                    </div>

                    {{!-- <div class="form-input input-address-2">
                        <input type="text" class="border-top-12 input-address__item"  placeholder="Xã">
                    </div> --}}
                </div>
            </div>
        </div>

        <div class="body-view">
            <div class="group-op-container">
                <div class="group-op nodisplay" id="delete">
                    <a href="/delete"><button disabled class="btn group-op-delete">Xóa</button> </a>
                </div>
            </div>

            <table class="table-view">
                <thead class="table_head">
                    <tr>
                        <th>
                            <input type="checkbox" name="checkall" id="checkall">
                        </th>
                        <th>Họ và tên</th>
                        <th>Ngày sinh</th>
                        <th>Giới Tính</th>
                        <th class="displaynone">Số CMT/CCCD</th>
                        <th class="displaynone">Quê Quán</th>
                        <th class="th-last"></th>
                    </tr>
                </thead>
                <tbody class="table_body">
                </tbody>
            </table>
        </div>
    </form>
<!-- Mobile -->
    <form class="modal-confirm js-modal-confirm">
        <div class="confirm-container showdata-mobile">
            <span>Thông Tin Cơ Bản</span>
            <div class="row row-input">
                <label class="col-24">1.Họ và Tên </label>
                <div class="form-group js-form-group">
                    <div class="form-input">
                        <input type="text" class="input-name" id="fullname" name="fullname" disabled>
                    </div>
                </div>
            </div>
            <div class="row row-input">
                <label class="col-24">2.Ngày Sinh </label>
                <div class="form-group js-form-group">
                    <div class="form-input">
                        <input type="text" class="dob" id="dob" name="dob" disabled>
                    </div>
                </div>
            </div>
            <div class="row row-input">
                <label class="col-24">3.Giới Tính </label>
                <div class="form-group js-form-group">
                    <div class="form-input">
                        <input type="text" class="sex" id="sex" name="sex" disabled>
                    </div>
                </div>
            </div>
            <div class="row row-input">
                <label class="col-24">4.Số CMT/CCCD </label>
                <div class="form-group js-form-group">
                    <div class="form-input">
                        <input type="text" class="cccd" id="cccd" name="cccd" disabled>
                    </div>
                </div>
            </div>
            <div class="row row-input">
                <label class="col-24">5.Quê Quán </label>
                <div class="form-group js-form-group">
                    <div class="form-input">
                        <input type="text" class="address" id="address" name="address" disabled>
                    </div>
                </div>
            </div>

            <button class="btn btn-show btn-show-mobile">Xem Chi Tiết</button>

            <i class="modal__close-icon js-close fas fa-times"></i>
        </div>
    </form>

