        crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>
    <script>
        $(document).ready(function () {

            var name_province;
            var name_district
            var name_subdistrict;
            var name_thon;
            var code_province;
            var code_district;
            var code_subdistrict;
            var code_thon;
            var view_search;
            
            if ({{dinh_danh}} === 1) {

                $('#view_search').on('input',function(e){
                    view_search = $('#view_search').val();
                    $('.table_body').empty();
                    fetch('../ASSETS/data_vietnam_province/nguoidan.json').then(response => {
                    return response.json();
                    }).then(data => {
                        $(data).each(function (index, value) {
                            if (value.name.includes(view_search) || value.cccd.includes(view_search)) {
                                fetch('../ASSETS/data_vietnam_province/thon.json').then(response1 => {
                                    return response1.json();
                                }).then(data1 => {
                                    $(data1).each(function (index1, value1) {
                                        if (value1.id === value.id_thon) {
                                            var que_quan;
                                            que_quan = value1.thon;
                                            fetch('../ASSETS/data_vietnam_province/xa.json').then(response2 => {
                                                return response2.json();
                                            }).then(data2 => {
                                                $(data2).each(function (index2, value2) {
                                                    if (value2.id === value1.id_xa) {
                                                        que_quan = que_quan + ", " + value2.xa;
                                                        fetch('../ASSETS/data_vietnam_province/huyen.json').then(response3 => {
                                                            return response3.json();
                                                        }).then(data3 => {
                                                            $(data3).each(function (index3, value3) {
                                                                if (value3.id === value2.id_huyen) {
                                                                    que_quan = que_quan + ", " + value3.huyen;
                                                                    fetch('../ASSETS/data_vietnam_province/tinh.json').then(response4 => {
                                                                        return response4.json();
                                                                    }).then(data4 => {
                                                                        $(data4).each(function (index4, value4) {
                                                                            if (value4.id === value3.id_tinh) {
                                                                                que_quan = que_quan + ", " + value4.tinh;
                                                                                $('.table_body').append('<tr class="oddr">'+'<td><input type="checkbox" name="checkid" id="checkid"></td>'+
                                                                                '<td>'+value.name+'</td><td>'+value.dob+'</td><td>'+value.gioi_tinh+'</td><td class="displaynone">'+value.cccd+
                                                                                '</td><td class="displaynone">'+que_quan+'</td><td class="button-show">'+ '<a href="/view/' + value.cccd + '">' +'<button disabled class="btn btn-show displaynone">Chi Tiết</button>' + '</a>' + '<i class="btn-show-mobile js-btn-show-mobile fas fa-bars"></i></td></tr>');
                                                                            }
                                                                        })
                                                                    }).catch(err => {
                                                                        console.log(err);
                                                                    });
                                                                }
                                                            })
                                                        }).catch(err => {
                                                            console.log(err);
                                                        });
                                                    }
                                                })
                                            }).catch(err => {
                                                console.log(err);
                                            });
                                        }
                                    })
                                }).catch(err => {
                                    console.log(err);
                                });
                                
                            }
                        });
                    }).catch(err => {
                        console.log(err);
                    });
                });

                $.ajax({
                    url: '../ASSETS/data_vietnam_province/tinh.json',
                    type: 'get',
                    success: function (data) {
                        $(data).each(function (index, value) {
                            $('#id_province').append('<option>' + value.tinh + '</option>');
                        })
                    }
                })

                $('#id_province').change(function () {
                    name_province = $('#id_province').val();
                    $.ajax({
                        url: '../ASSETS/data_vietnam_province/tinh.json',
                        type: 'get',
                        success: function (data) {
                            $(data).each(function (index, value) {
                                if (value.tinh === name_province) {
                                    code_province = value.id;
                                }
                            })
                        }
                    })
                    $('#id_district').empty().append('<option value="" disabled selected>-- Quận/Huyện --</option>');
                    $('#id_subdistrict').empty().append('<option value="" disabled selected>-- Phường/Xã --</option>');
                    $('#id_thon').empty().append('<option value="" disabled selected>-- Thôn/Bản/Tổ dân phố --</option>');
                    $.ajax({
                        url: '../ASSETS/data_vietnam_province/huyen.json',
                        type: 'get',
                        success: function (data) {
                            $(data).each(function (index, value) {
                                if (value.id_tinh === code_province) {
                                    $('#id_district').append('<option>' + value.huyen + '</option>');
                                }
                            })
                        }
                    })
                })

                $('#id_district').change(function () {
                    name_district = $('#id_district').val();
                    $.ajax({
                        url: '../ASSETS/data_vietnam_province/huyen.json',
                        type: 'get',
                        success: function (data) {
                            $(data).each(function (index, value) {
                                if (value.huyen === name_district) {
                                    code_district = value.id;
                                }
                            })
                        }
                    })
                    $('#id_subdistrict').empty().append('<option value="" disabled selected>-- Phường/Xã --</option>');
                    $('#id_thon').empty().append('<option value="" disabled selected>-- Thôn/Bản/Tổ dân phố --</option>');
                    $.ajax({
                        url: '../ASSETS/data_vietnam_province/xa.json',
                        type: 'get',
                        success: function (data) {
                            $(data).each(function (index, value) {
                                if (value.id_huyen === code_district) {
                                    $('#id_subdistrict').append('<option>' + value.xa + '</option>');
                                }
                            })
                        }
                    })
                })

                $('#id_subdistrict').change(function () {
                    name_subdistrict = $('#id_subdistrict').val();
                    $.ajax({
                        url: '../ASSETS/data_vietnam_province/xa.json',
                        type: 'get',
                        success: function (data) {
                            $(data).each(function (index, value) {
                                if (value.xa === name_subdistrict) {
                                    code_subdistrict = value.id;
                                }
                            })
                        }
                    })
                    $('#id_thon').empty().append('<option value="" disabled selected>-- Thôn/Bản/Tổ dân phố --</option>');
                    $.ajax({
                        url: '../ASSETS/data_vietnam_province/thon.json',
                        type: 'get',
                        success: function (data) {
                            $(data).each(function (index, value) {
                                if (value.id_xa === code_subdistrict) {
                                    $('#id_thon').append('<option>' + value.thon + '</option>');
                                }
                            })
                        }
                    })
                })

                $('#id_thon').change(function () {
                    name_thon = $('#id_thon').val();
                    $.ajax({
                        url: '../ASSETS/data_vietnam_province/thon.json',
                        type: 'get',
                        success: function (data) {
                            $(data).each(function (index, value) {
                                if (value.thon === name_thon) {
                                    code_thon = value.id;
                                }
                            })
                        }
                    })
                })

                $('#id_province').change(function () {
                    $('.table_body').empty();
                    fetch('../ASSETS/data_vietnam_province/nguoidan.json').then(response => {
                    return response.json();
                    }).then(data => {
                        $(data).each(function (index, value) {
                            if (value.id_thon.substring(0,2) === code_province) {
                                $('.table_body').append('<tr class="oddr">'+'<td><input type="checkbox" name="checkid" id="checkid"></td>'+
                                '<td>'+value.name+'</td><td>'+value.dob+'</td><td>'+value.gioi_tinh+'</td><td class="displaynone">'+value.cccd+
                                '</td><td class="displaynone">'+name_province+'</td><td class="button-show">'+ '<a href="/view/' + value.cccd + '">' +'<button disabled class="btn btn-show displaynone">Chi Tiết</button>' + '</a>' + '<i class="btn-show-mobile js-btn-show-mobile fas fa-bars"></i></td></tr>');
                            }
                        })
                    }).catch(err => {
                        console.log(err);
                    });
                })

                $('#id_district').change(function () {
                    $('.table_body').empty();
                    fetch('../ASSETS/data_vietnam_province/nguoidan.json').then(response => {
                    return response.json();
                    }).then(data => {
                        $(data).each(function (index, value) {
                            if (value.id_thon.substring(0,4) === code_district) {
                                $('.table_body').append('<tr class="oddr">'+'<td><input type="checkbox" name="checkid" id="checkid"></td>'+
                                '<td>'+value.name+'</td><td>'+value.dob+'</td><td>'+value.gioi_tinh+'</td><td class="displaynone">'+value.cccd+
                                '</td><td class="displaynone">'+name_district+'</td><td class="button-show">'+ '<a href="/view/' + value.cccd + '">' +'<button disabled class="btn btn-show displaynone">Chi Tiết</button>' + '</a>' + '<i class="btn-show-mobile js-btn-show-mobile fas fa-bars"></i></td></tr>');
                                {{!-- $('#thon').append('<option>' + value.id + '</option>'); --}}
                            }
                        })
                    }).catch(err => {
                        console.log(err);
                    });
                })

                $('#id_subdistrict').change(function () {
                    $('.table_body').empty();
                    fetch('../ASSETS/data_vietnam_province/nguoidan.json').then(response => {
                    return response.json();
                    }).then(data => {
                        $(data).each(function (index, value) {
                            if (value.id_thon.substring(0,6) === code_subdistrict) {
                                $('.table_body').append('<tr class="oddr">'+'<td><input type="checkbox" name="checkid" id="checkid"></td>'+
                                '<td>'+value.name+'</td><td>'+value.dob+'</td><td>'+value.gioi_tinh+'</td><td class="displaynone">'+value.cccd+
                                '</td><td class="displaynone">'+name_subdistrict+'</td><td class="button-show">'+ '<a href="/view/' + value.cccd + '">' +'<button disabled class="btn btn-show displaynone">Chi Tiết</button>' + '</a>' + '<i class="btn-show-mobile js-btn-show-mobile fas fa-bars"></i></td></tr>');
                                {{!-- $('#thon').append('<option>' + value.id + '</option>'); --}}
                            }
                        })
                    }).catch(err => {
                        console.log(err);
                    });
                })

                $('#id_thon').change(function () {
                    $('.table_body').empty();
                    fetch('../ASSETS/data_vietnam_province/nguoidan.json').then(response => {
                    return response.json();
                    }).then(data => {
                        $(data).each(function (index, value) {
                            if (value.id_thon === code_thon) {
                                $('.table_body').append('<tr class="oddr">'+'<td><input type="checkbox" name="checkid" id="checkid"></td>'+
                                '<td>'+value.name+'</td><td>'+value.dob+'</td><td>'+value.gioi_tinh+'</td><td class="displaynone">'+value.cccd+
                                '</td><td class="displaynone">'+name_thon+'</td><td class="button-show">'+ '<a href="/view/' + value.cccd + '">' +'<button disabled class="btn btn-show displaynone">Chi Tiết</button>' + '</a>' + '<i class="btn-show-mobile js-btn-show-mobile fas fa-bars"></i></td></tr>');
                                {{!-- $('#thon').append('<option>' + value.id + '</option>'); --}}
                            }
                        })
                    }).catch(err => {
                        console.log(err);
                    });
                })

            } else if ({{dinh_danh}} === 2) {

                $('#view_search').on('input',function(e){
                    view_search = $('#view_search').val();
                    $('.table_body').empty();
                    fetch('../ASSETS/data_vietnam_province/nguoidan.json').then(response => {
                    return response.json();
                    }).then(data => {
                        $(data).each(function (index, value) {
                            if (value.id_thon.substring(0,2) === "{{code}}" && (value.name.includes(view_search) || value.cccd.includes(view_search))) {
                                fetch('../ASSETS/data_vietnam_province/thon.json').then(response1 => {
                                    return response1.json();
                                }).then(data1 => {
                                    $(data1).each(function (index1, value1) {
                                        if (value1.id === value.id_thon) {
                                            var que_quan;
                                            que_quan = value1.thon;
                                            fetch('../ASSETS/data_vietnam_province/xa.json').then(response2 => {
                                                return response2.json();
                                            }).then(data2 => {
                                                $(data2).each(function (index2, value2) {
                                                    if (value2.id === value1.id_xa) {
                                                        que_quan = que_quan + ", " + value2.xa;
                                                        fetch('../ASSETS/data_vietnam_province/huyen.json').then(response3 => {
                                                            return response3.json();
                                                        }).then(data3 => {
                                                            $(data3).each(function (index3, value3) {
                                                                if (value3.id === value2.id_huyen) {
                                                                    que_quan = que_quan + ", " + value3.huyen;
                                                                    fetch('../ASSETS/data_vietnam_province/tinh.json').then(response4 => {
                                                                        return response4.json();
                                                                    }).then(data4 => {
                                                                        $(data4).each(function (index4, value4) {
                                                                            if (value4.id === value3.id_tinh) {
                                                                                que_quan = que_quan + ", " + value4.tinh;
                                                                                $('.table_body').append('<tr class="oddr">'+'<td><input type="checkbox" name="checkid" id="checkid"></td>'+
                                                                                '<td>'+value.name+'</td><td>'+value.dob+'</td><td>'+value.gioi_tinh+'</td><td class="displaynone">'+value.cccd+
                                                                                '</td><td class="displaynone">'+que_quan+'</td><td class="button-show">'+ '<a href="/view/' + value.cccd + '">' +'<button disabled class="btn btn-show displaynone">Chi Tiết</button>' + '</a>' + '<i class="btn-show-mobile js-btn-show-mobile fas fa-bars"></i></td></tr>');
                                                                            }
                                                                        })
                                                                    }).catch(err => {
                                                                        console.log(err);
                                                                    });
                                                                }
                                                            })
                                                        }).catch(err => {
                                                            console.log(err);
                                                        });
                                                    }
                                                })
                                            }).catch(err => {
                                                console.log(err);
                                            });
                                        }
                                    })
                                }).catch(err => {
                                    console.log(err);
                                });
                                
                            }
                        });
                    }).catch(err => {
                        console.log(err);
                    });
                });

                $.ajax({
                    url: '../ASSETS/data_vietnam_province/huyen.json',
                    type: 'get',
                    success: function (data) {
                        $(data).each(function (index, value) {
                            if (value.id_tinh === "{{code}}") {
                                $('#id_district').append('<option>' + value.huyen + '</option>');
                            }
                        })
                    }
                })

                $('#id_district').change(function () {
                    name_district = $('#id_district').val();
                    $.ajax({
                        url: '../ASSETS/data_vietnam_province/huyen.json',
                        type: 'get',
                        success: function (data) {
                            $(data).each(function (index, value) {
                                if (value.huyen === name_district) {
                                    code_district = value.id;
                                }
                            })
                        }
                    })
                    $('#id_subdistrict').empty().append('<option value="" disabled selected>-- Phường/Xã --</option>');
                    $('#id_thon').empty().append('<option value="" disabled selected>-- Thôn/Bản/Tổ dân phố --</option>');
                    $.ajax({
                        url: '../ASSETS/data_vietnam_province/xa.json',
                        type: 'get',
                        success: function (data) {
                            $(data).each(function (index, value) {
                                if (value.id_huyen === code_district) {
                                    $('#id_subdistrict').append('<option>' + value.xa + '</option>');
                                }
                            })
                        }
                    })
                })

                $('#id_subdistrict').change(function () {
                    name_subdistrict = $('#id_subdistrict').val();
                    $.ajax({
                        url: '../ASSETS/data_vietnam_province/xa.json',
                        type: 'get',
                        success: function (data) {
                            $(data).each(function (index, value) {
                                if (value.xa === name_subdistrict) {
                                    code_subdistrict = value.id;
                                }
                            })
                        }
                    })
                    $('#id_thon').empty().append('<option value="" disabled selected>-- Thôn/Bản/Tổ dân phố --</option>');
